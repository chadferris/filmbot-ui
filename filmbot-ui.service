[Unit]
Description=Filmbot Touchscreen UI
After=graphical.target
Wants=graphical.target

[Service]
Type=simple
User=filmbot
Group=filmbot
Environment=WAYLAND_DISPLAY=wayland-0
Environment=XDG_RUNTIME_DIR=/run/user/1000
Environment=QT_QPA_PLATFORM=wayland
WorkingDirectory=/opt/filmbot-appliance/ui
ExecStart=/opt/filmbot-appliance/ui/venv/bin/python /opt/filmbot-appliance/ui/main.py
Restart=always
RestartSec=3
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=graphical.target

