[Unit]
Description=Filmbot Touchscreen UI
After=graphical.target
Wants=graphical.target

[Service]
Type=simple
User=filmbot
Group=filmbot
Environment=DISPLAY=:0
Environment=QT_QPA_PLATFORM=eglfs
Environment=QT_QPA_EGLFS_ALWAYS_SET_MODE=1
WorkingDirectory=/opt/filmbot-appliance/ui
ExecStart=/usr/bin/python3 /opt/filmbot-appliance/ui/main.py
Restart=always
RestartSec=3

[Install]
WantedBy=graphical.target

