[Unit]
Description=Filmbot Daily Health Report
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=filmbot
WorkingDirectory=/opt/filmbot-appliance/ui
ExecStart=/opt/filmbot-appliance/ui/venv/bin/python3 /opt/filmbot-appliance/ui/health_check.py --daily-report
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

